<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/urgent_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="?attr/urgentListBackgroundColor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/urgent_week"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="Week 41"
                android:textSize="16sp"
                android:textColor="?attr/urgentsTextColor" />

            <TextView
                android:id="@+id/urgent_date"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/urgent_week"
                android:layout_alignStart="@+id/urgent_week"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="Monday 08.6"
                android:textSize="16sp"
                android:textColor="?attr/urgentsTextColor" />

            <ImageView
                android:id="@+id/notified_identifier"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignTop="@+id/urgent_week"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/urgent_week"
                android:background="@drawable/notified_identifier_red"
                android:src="@drawable/ic_baseline_notifications_14"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/urgent_vertical_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/urgentLinesColor" />

        <TextView
            android:id="@+id/urgent_homework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="52dp"
            android:textColor="?attr/urgentsTextColor"
            android:gravity="start"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="2dp"
            android:paddingEnd="10dp"
            android:text="1. Геометрія: написати ті зно 10 завдань три тисячі прикладів і тому подібне і так далі короче"
            android:textSize="16sp"/>

    </LinearLayout>

